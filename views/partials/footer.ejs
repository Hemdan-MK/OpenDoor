<script>
	document.addEventListener('DOMContentLoaded', function() {
		// Define the links and their corresponding modals
		const modalLinks = [{
				selector: '.helpful-links a:nth-child(1)',
				modalId: '#servicesModal'
			},
			{
				selector: '.helpful-links a:nth-child(2)',
				modalId: '#termsModal'
			},
